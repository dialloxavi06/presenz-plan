


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title mb-0">Enregistré un Employé</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_employee_index') }}" class="btn btn-outline-secondary">Rétour á la Liste</a>
                            <button type="submit" class="btn btn-success">{{ button_label|default('Enregistré') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
